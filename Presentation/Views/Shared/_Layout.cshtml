<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - My App</title>
    <link rel="stylesheet" href="/css/site.css" />
    <script src="/js/site.js" defer></script>
   

</head>
<body>
    <header>
        <h1>My Website Header</h1>
        <nav>
            @if (ViewBag.IsAuthorized != null && (bool)ViewBag.IsAuthorized){
                <a href="/Home" data-auth>Home</a>
                <a href="/Reservation/reservation" data-auth>Reservations</a>

                <a href="/Reservation/MyReservations" data-auth>MyReservations</a>


                <a href="#" id="logout">Logout</a>
            }
            else{
                <a href="/Home" data-auth>Home</a>
                <a href="/Reservation/reservation" data-auth>Reservations</a>

                <a href="#" id="openLogin">Login</a>
                <a href="#" id="openRegister">Register</a>
            }
        </nav>
    </header>

    <main>
        @RenderBody()
    </main>

    <footer>
        <p>© 2024 My Website. All rights reserved.</p>
    </footer>
    <div id="modalContainer">
        @await Component.InvokeAsync("Login")
    </div>
</body>
</html>
